{
  "openapi": "3.0.0",
  "info": {
    "title": "API Lava Rápido",
    "version": "1.0.0",
    "description": "Documentação da API do sistema de lava rápido",
    "contact": {
        "email": "gustavo.gsilva1723@gmail.com"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Servidor local"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "email": { "type": "string" },
          "password": { "type": "string" },
          "role": { "type": "string", "enum": ["admin", "cliente"] }
        },
        "required": ["name", "email", "password"]
      },
      "Veiculo": {
        "type": "object",
        "properties": {
          "placa": { "type": "string" },
          "modelo": { "type": "string" },
          "cor": { "type": "string" },
          "nomeCliente": { "type": "string" },
          "contato": { "type": "string" },
          "status": { "type": "string", "enum": ["pendente", "em atendimento", "finalizado"] }
        },
        "required": ["placa", "modelo", "cor", "nomeCliente", "contato"]
      },
      "Login": {
        "type": "object",
        "properties": {
          "email": { "type": "string" },
          "password": { "type": "string" }
        },
        "required": ["email", "password"]
      }
    }
  },
  "paths": {
    "/auth": {
      "post": {
        "tags": ["Autenticação"],
        "summary": "Login do usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Login" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login realizado com sucesso"
          },
          "400": { "description": "Credenciais inválidas" }
        }
      }
    },
    "/user": {
      "post": {
        "tags": ["Usuário"],
        "summary": "Criar um novo usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/User" }
            }
          }
        },
        "responses": {
          "201": { "description": "Usuário criado com sucesso" },
          "400": { "description": "Erro ao criar usuário" }
        }
      },
      "get": {
        "tags": ["Usuário"],
        "summary": "Listar todos os usuários",
        "responses": {
          "200": { "description": "Lista de usuários retornada" }
        }
      }
    },
    "/user/{id}": {
      "get": {
        "tags": ["Usuário"],
        "summary": "Buscar usuário por ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "Usuário encontrado" }
        }
      },
      "patch": {
        "tags": ["Usuário"],
        "summary": "Atualizar usuário por ID",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": false,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/User" }
            }
          }
        },
        "responses": {
          "200": { "description": "Usuário atualizado" }
        }
      }
    },
    "/veiculo": {
      "post": {
        "tags": ["Veículo"],
        "summary": "Criar veículo",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Veiculo" }
            }
          }
        },
        "responses": {
          "201": { "description": "Veículo criado" }
        }
      },
      "get": {
        "tags": ["Veículo"],
        "summary": "Listar veículos com paginação",
        "parameters": [
          {
            "name": "limit",
            "in": "query",
            "schema": { "type": "integer" }
          },
          {
            "name": "offset",
            "in": "query",
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": { "description": "Lista de veículos" }
        }
      }
    },
    "/veiculo/top": {
      "get": {
        "tags": ["Veículo"],
        "summary": "Buscar veículo em destaque",
        "responses": {
          "200": { "description": "Veículo encontrado" }
        }
      }
    },
    "/veiculo/search": {
      "get": {
        "tags": ["Veículo"],
        "summary": "Buscar veículo por placa",
        "parameters": [
          {
            "name": "placa",
            "in": "query",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "Veículo encontrado" },
          "400": { "description": "Veículo não encontrado" }
        }
      }
    },
    "/veiculo/byUser": {
      "get": {
        "tags": ["Veículo"],
        "summary": "Listar veículos do usuário autenticado",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Lista de veículos do usuário" }
        }
      }
    },
    "/veiculo/{id}": {
      "get": {
        "tags": ["Veículo"],
        "summary": "Buscar veículo por ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "Veículo encontrado" }
        }
      },
      "patch": {
        "tags": ["Veículo"],
        "summary": "Atualizar veículo",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": false,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Veiculo" }
            }
          }
        },
        "responses": {
          "200": { "description": "Veículo atualizado com sucesso" }
        }
      },
      "delete": {
        "tags": ["Veículo"],
        "summary": "Deletar veículo",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "Veículo deletado com sucesso" }
        }
      }
    }
  }
}
